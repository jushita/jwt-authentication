{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "typeRoots": ["node_modules/@types","src/typings"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true        

    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}